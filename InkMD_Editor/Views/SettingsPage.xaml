<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="InkMD_Editor.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InkMD_Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <StackPanel Margin="16" Spacing="4">
        <Button
            Margin="0,0,0,10"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderThickness="0"
            Click="Button_Click">
            <SymbolIcon Symbol="Back" />
        </Button>
        <controls:SettingsCard
            x:Name="settingsCard"
            Description="Select your preferred app theme."
            Header="App Theme"
            HeaderIcon="{ui:FontIcon Glyph=&#xE790;}">
            <ComboBox x:Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged">
                <ComboBoxItem Tag="Light">Light</ComboBoxItem>
                <ComboBoxItem Tag="Dark">Dark</ComboBoxItem>
                <ComboBoxItem Tag="Default">Use system setting</ComboBoxItem>
            </ComboBox>
        </controls:SettingsCard>
    </StackPanel>
</Page>
