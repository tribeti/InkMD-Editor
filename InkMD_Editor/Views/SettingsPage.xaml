<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="InkMD_Editor.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InkMD_Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <TextBlock>This is setting page</TextBlock>
        <FontIcon Glyph="&#xE708;" />
        <AppBarButton Icon="{ui:FontIcon Glyph=&#xE102;}" />
        <Button Click="Button_Click" />

        <controls:Segmented HorizontalAlignment="Right" SelectionMode="Single">
            <controls:SegmentedItem Icon="{ui:FontIcon Glyph=&#xE7C3;}" ToolTipService.ToolTip="Markdown" />
            <controls:SegmentedItem Icon="{ui:FontIcon Glyph=&#xE89A;}" ToolTipService.ToolTip="Split view" />
            <controls:SegmentedItem Icon="{ui:FontIcon Glyph=&#xE8FF;}" ToolTipService.ToolTip="Preview" />
        </controls:Segmented>
    </Grid>
</Page>
