<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="InkMD_Editor.EditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InkMD_Editor.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:CustomMenuBar Grid.Row="0" />
        <!--  File Explorer Sidebar  -->
        <Grid
            x:Name="Body"
            Grid.Row="1"
            Padding="0,0,12,0"
            Background="{ThemeResource LayerFillColorDefaultBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <RelativePanel Grid.Column="0">
                <AutoSuggestBox
                    x:Name="Box"
                    Margin="12,8"
                    PlaceholderText="Search files..."
                    QueryIcon="Find" />

                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    RelativePanel.Below="Box"
                    VerticalScrollBarVisibility="Auto">
                    <TreeView SelectionMode="Single">
                        <TreeView.RootNodes>
                            <TreeViewNode Content="Flavors" IsExpanded="True">
                                <TreeViewNode.Children>
                                    <TreeViewNode Content="Vanilla" />
                                    <TreeViewNode Content="Strawberry" />
                                    <TreeViewNode Content="Chocolate" />
                                </TreeViewNode.Children>
                            </TreeViewNode>
                        </TreeView.RootNodes>
                    </TreeView>
                </ScrollViewer>

                <Button
                    Margin="8"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Button_Click"
                    RelativePanel.AlignBottomWithPanel="True">
                    <FontIcon Glyph="&#xE713;" />
                </Button>
            </RelativePanel>

            <Grid Grid.Column="1" Background="Azure">
                <TextBlock>Hello world</TextBlock>
            </Grid>

        </Grid>

        <Grid
            x:Name="Footer"
            Grid.Row="2"
            Padding="8,0"
            BorderThickness="0,1,0,0">
            <RelativePanel HorizontalAlignment="Right">
                <TextBlock
                    x:Name="WordCountText"
                    Padding="8"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="999" />
                <TextBlock
                    Padding="8"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    RelativePanel.RightOf="WordCountText"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="words" />
            </RelativePanel>
        </Grid>
    </Grid>
</Page>
