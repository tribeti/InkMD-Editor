<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="InkMD_Editor.Controls.TabViewContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:InkMD_Editor.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InkMD_Editor.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tcb="using:TextControlBoxNS"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:DoubleToIntConverter x:Key="DoubleToIntConverter" />
    </UserControl.Resources>

    <Grid>
        <controls:SwitchPresenter Value="{x:Bind ViewModel.ViewMode, Mode=OneWay}">
            <!--  Case 0: Editor only (TextControlBox)  -->
            <controls:Case Value="0">
                <Grid>
                    <tcb:TextControlBox
                        x:Name="EditBox"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        FontFamily="{x:Bind ViewModel.FontFamily, Mode=OneWay}"
                        FontSize="{x:Bind ViewModel.FontSize, Mode=OneWay, Converter={StaticResource DoubleToIntConverter}}"
                        TextChanged="EditBox_TextChanged" />
                </Grid>
            </controls:Case>

            <!--  Case 1: Split view (TextControlBox + WebView2)  -->
            <controls:Case Value="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <tcb:TextControlBox
                        x:Name="EditBox_Split"
                        Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        FontFamily="{x:Bind ViewModel.FontFamily, Mode=OneWay}"
                        FontSize="{x:Bind ViewModel.FontSize, Mode=OneWay, Converter={StaticResource DoubleToIntConverter}}"
                        TextChanged="EditBox_TextChanged" />

                    <controls:GridSplitter Width="8" HorizontalAlignment="Right">
                        <controls:GridSplitter.RenderTransform>
                            <TranslateTransform X="-7" />
                        </controls:GridSplitter.RenderTransform>
                    </controls:GridSplitter>

                    <WebView2 x:Name="MarkdownPreview_Split" Grid.Column="1" />
                </Grid>
            </controls:Case>

            <!--  Case 2: Preview only (WebView2)  -->
            <controls:Case Value="2">
                <Grid>
                    <WebView2 x:Name="MarkdownPreview" />
                </Grid>
            </controls:Case>
        </controls:SwitchPresenter>
    </Grid>
</UserControl>